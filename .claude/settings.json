{
  "env": {
    "ANTHROPIC_BASE_URL": "http://localhost:4141",
    "ANTHROPIC_AUTH_TOKEN": "dummy",
    "ANTHROPIC_MODEL": "claude-opus-4.5",
    "ANTHROPIC_DEFAULT_OPUS_MODEL": "claude-opus-4.5",
    "ANTHROPIC_DEFAULT_SONNET_MODEL": "claude-sonnet-4.5",
    "ANTHROPIC_DEFAULT_HAIKU_MODEL": "claude-haiku-4.5",
    "DISABLE_NON_ESSENTIAL_MODEL_CALLS": "1",
    "CLAUDE_CODE_DISABLE_NONESSENTIAL_TRAFFIC": "1"
  },
  "permissions": {
    "allow": [
      "Bash(grep:*)",
      "Bash(ls:*)",
      "Bash(find:*)",
      "Bash(xcodebuild:*)",
      "Bash(git add:*)",
      "Bash(git log:*)",
      "Bash(git diff:*)",
      "Bash(git commit:*)",
      "Bash(git rev-parse:*)",
      "Bash(gh pr:*)",
      "Bash(gh api:*)",
      "mcp__github__create_pull_request",
      "mcp__github__request_copilot_review",
      "mcp__github__update_pull_request"
    ],
    "deny": [
      "WebSearch",
      "Read(./tangem-app-config/**)",
      "Read(./BlockchainSdkExample/config/**)",
      "Read(./fastlane/test_output/**)",
      "Read(./fastlane/uitest-artifacts/**)",
      "Read(./fastlane/report.xml)",
      "Read(./vendor/bundle/**)",
      "Read(./vendor/ios_dependencies/**)"
    ]
  },
  "hooks": {
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "mint run swiftformat@0.55.5 . --config .swiftformat"
          }
        ]
      }
    ]
  },
  "enabledPlugins": {
    "axiom@axiom-marketplace": true,
    "context7@claude-plugins-official": true,
    "swift-lsp@claude-plugins-official": true
  }
}
